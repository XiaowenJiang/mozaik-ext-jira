.jira__sprint
  &__loading
    display block
    margin 40px 0 0 50px
    font-size 32px
  &__name
    margin 10px 0 0 50px
    display block
    width 100%
    font-size 18px
    font-weight 600
  &__description
    margin 10px 0 0 50px
    display block
    width 100%
    font-size 15px
  &__remain
    width 100%
    height 100%
    margin auto
    display block
    &__text-circle
      display block
      width 120px
      height 120px
      line-height 120px
      margin auto
      border-radius 50%
      font-weight bold
      font-size 70px
      color #FFFFFF
      text-align center
      vertical-align middle
      background #86772D
  &__issue
    position absolute
    bottom 20px
    display block
    margin 40px 0 0 50px
    &__text
      font-size 15px
      margin-right 5px
    &__status
      font-weight bold
      font-size 15px
      margin-right 20px
    &__undefined
      color #CCCED1
    &__todo
      color #C5CAE9
    &__inprogress
      color #FFFF00
    &__done
      color $success-color
