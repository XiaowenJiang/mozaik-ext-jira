.jira__sprint
  .widget__body
    padding 1.6vmin
    display flex
    justify-content center
    align-content stretch
    flex-direction column

  &__loading
    display block
    margin 40px 0 0 50px
    font-size 1.6em
  &__title
    display flex
    display -webkit-flex
    margin-top 10px
    width 100%
    height 20%
    justify-content space-around
    &__name
      font-size 1em
    &__description
      font-weight 600
      font-size 1.5em
  &__remain
    height 50%
    width 100%
    display -webkit-flex
    display flex
    -webkit-justify-content center
    justify-content         center
    -webkit-align-items center
    align-items         center
    text-align center
    &__text-circle
      margin auto
      width 9rem
      height 9rem
      line-height 9rem
      border-radius 50%
      font-family sans-serif
      font-weight bold
      font-size 5.5rem
      color #FFFFFF
      background #86772D
  &__issue
    display block
    margin-left 50px
    &__text
      font-size 1em
      margin-right 5px
    &__status
      font-weight bold
      font-size 1em
      margin-right 20px
    &__undefined
      color #CCCED1
    &__todo
      color #C5CAE9
    &__inprogress
      color #FFFF00
    &__done
      color $success-color
